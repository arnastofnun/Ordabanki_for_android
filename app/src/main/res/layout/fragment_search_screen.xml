<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGreen100"
    android:orientation="vertical"
    >

    <android.widget.SearchView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:gravity="center"
        android:drawableRight="@drawable/ic_action_search"
        android:drawableEnd="@drawable/ic_action_search"
        android:imeOptions="actionSearch"
        android:layout_alignParentTop="true"
        android:textColorHint="@android:color/tertiary_text_dark"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:hint="@string/search_hint"
        android:textColor="@color/darkgrey"
        />

<View
    android:id="@+id/seperator"
    android:layout_below="@id/searchView"
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:background="@color/darkgrey"
    />

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seperator"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

    <RadioGroup
        android:id="@+id/optionsGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/combined_search"
        android:textColor="@color/darkgrey"
        android:id="@+id/radioButton"
        android:checked="true"
 />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/term_only_search"
        android:textColor="@color/darkgrey"
        android:id="@+id/radioButton2"

/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/synonym_only_search"
        android:textColor="@color/darkgrey"
        android:id="@+id/radioButton3" />
    </RadioGroup>
    </RelativeLayout>
</RelativeLayout>