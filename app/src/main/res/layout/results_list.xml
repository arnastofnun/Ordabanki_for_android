<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="@color/lightGreen100"
    >
    <TextView
        android:id="@+id/resultTerm"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="Term"
        android:layout_height="fill_parent"
        android:textSize="25sp"
        android:textColor="@color/darkgrey"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/resultTerm"
        android:layout_toEndOf="@id/resultTerm"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
    <TextView
        android:id="@+id/resultLanguage"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:text="Language"
        android:textSize="16sp"
        android:textColor="@color/darkgrey"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/resultGlossary"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Glossary"
        android:textSize="16sp"
        android:textColor="@color/darkgrey"
        android:singleLine="false"
        android:gravity="center"

        />
    </LinearLayout>

</RelativeLayout>