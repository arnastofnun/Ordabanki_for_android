<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="@color/lightGreen100"
    >
    <LinearLayout
        android:id="@+id/lang_gloss_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/resultLanguage"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:text="Language"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/resultGlossary"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Glossary"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            android:singleLine="false"
            android:gravity="center"

            />
    </LinearLayout>
    <TextView
        android:id="@+id/resultTerm"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="15dp"
        android:singleLine="false"
        android:text="Term"
        android:layout_toLeftOf="@id/lang_gloss_wrapper"
        android:layout_toStartOf="@id/lang_gloss_wrapper"
        android:layout_height="fill_parent"
        android:textSize="25sp"
        android:textColor="@color/darkgrey" />


</RelativeLayout>