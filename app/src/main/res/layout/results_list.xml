<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:background="@color/lightGreen100"
    >
    <TextView
        android:id="@+id/resultTerm"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Term"
        android:textSize="20sp"
        android:textColor="@color/darkgrey"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultTerm"
        android:layout_marginTop="5dp"
        android:id="@+id/linearLayout">
    <TextView
        android:id="@+id/resultLanguage"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"

        android:text="(Language)"
        android:textSize="16sp"
        android:textColor="@color/darkgrey"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/resultGlossary"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="[Glossary]"
        android:textSize="16sp"
        android:textColor="@color/darkgrey"
        android:singleLine="false"
        android:gravity="center"

        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/resultSynonyms"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="syn"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            android:singleLine="false"
            android:gravity="center"
            android:layout_width="0dp"
            />

        <TextView
            android:id="@+id/resultDefinition"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="def"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            android:singleLine="false"
            android:gravity="center"
            android:layout_width="0dp"
            />

        <TextView
            android:id="@+id/resultExample"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="exa"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            android:singleLine="false"
            android:gravity="center"
            android:layout_width="0dp"
            />

        <TextView
            android:id="@+id/resultLexical_category"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="lex"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            android:singleLine="true"
            android:gravity="center"
            android:layout_width="0dp"
            />
        </LinearLayout>


</RelativeLayout>