<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/change_language_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/change_language"
        android:textSize="30sp"
        android:gravity="center"
        android:padding="10dp"
        android:background="?dialogHeaderBackground"
        android:textColor="?dialogHeaderText"/>

    <ListView
        android:layout_below="@id/change_language_titlebar"
        android:id="@+id/change_language_list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:descendantFocusability="beforeDescendants"
        >
    </ListView>


</RelativeLayout>