<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="20"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="?primaryBackgroundColor"
    >

    <TextView
        android:id="@+id/word"
        android:layout_width="0dp"
        android:layout_weight="15"
        android:paddingLeft="15dp"
        android:singleLine="false"
        android:text="Header"
        android:layout_height="fill_parent"
        android:textSize="25sp" />
    <RelativeLayout
        android:id="@+id/lang_gloss_wrapper"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:layout_gravity="end"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/resultLanguage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Language"
            android:textSize="14sp"
            android:gravity="end"
            />

        <TextView
            android:id="@+id/resultGlossary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/resultLanguage"
            android:text="Glossary"
            android:textSize="14sp"
            android:singleLine="false"
            android:gravity="end"

            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:contentDescription="collapse indicator"
        android:orientation="vertical"
        />


</LinearLayout>