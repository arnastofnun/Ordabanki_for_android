<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dip"
    >

    <CheckBox
        android:id="@+id/GlossaryCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
    />

    <TextView
        android:id="@+id/GlossaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignBaseline="@id/GlossaryCheckbox"
        android:layout_alignBottom="@id/GlossaryCheckbox"
        android:layout_toEndOf="@id/GlossaryCheckbox"
        android:text="Some glossary"/>

</RelativeLayout>