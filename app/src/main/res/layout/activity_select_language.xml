<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cthulhu.ordabankiforandroid.SelectLanguageActivity"
    android:padding="20dp"
    android:orientation="vertical">

    <ImageView
        android:contentDescription="@string/splashimage"
        android:id="@+id/SelectLanguageActivity.logo"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/splash"/>

    <TextView
        android:id="@+id/SelectLanguageActivity.welcometext"
        android:text="@string/welcometext"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:textSize="30sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">
        <ImageButton
            android:id="@+id/SelectLanguageActivity.icelandic"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_iceland"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:scaleType="fitXY"
            android:background="@color/white"
            />
        <ImageButton
            android:id="@+id/SelectLanguageActivity.english"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_united_kingdom"
            android:background="@color/white"
            android:scaleType="fitXY"
            />
        </LinearLayout>


    <TextView
        android:id="@+id/SelectLanguageActivity.selectlanguagetext"
        android:text="@string/selectlanguage"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"

        android:textSize="20sp"
        android:gravity="center" />

</LinearLayout>
