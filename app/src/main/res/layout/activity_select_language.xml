<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cthulhu.ordabankiforandroid.SelectLanguageActivity"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/lightGreen100">

    <ImageView
        android:contentDescription="@string/splashimage"
        android:id="@+id/SelectLanguageActivity.logo"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/splash"/>

    <TextView
        android:id="@+id/SelectLanguageActivity.welcometext"
        android:text="@string/welcometext"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textColor="#@color/darkgrey"
        android:layout_weight="0.5"
        android:textSize="30sp"
        android:gravity="center"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/scrollView"
        android:layout_weight="0.3"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <ImageButton
                android:id="@+id/SelectLanguageActivity.icelandic"
                android:layout_width="match_parent"
                android:layout_weight="0.3"
                android:layout_height="120dp"
                android:src="@drawable/ic_iceland"
                android:scaleType="fitCenter"
                android:background="@null"
                android:contentDescription="Icelandic" />

            <ImageButton
                android:id="@+id/SelectLanguageActivity.english"
                android:layout_width="match_parent"
                android:layout_weight="0.3"
                android:layout_height="120dp"
                android:src="@drawable/ic_united_kingdom"
                android:background="@null"
                android:scaleType="fitCenter"
                android:contentDescription="English" />

            <ImageButton
                android:id="@+id/SelectLanguageActivity.danish"
                android:layout_width="match_parent"
                android:layout_weight="0.3"
                android:layout_height="120dp"
                android:src="@drawable/ic_denmark"
                android:scaleType="fitCenter"
                android:background="@null"
                android:focusableInTouchMode="false"
                android:contentDescription="Danish" />

            <ImageButton
                android:id="@+id/SelectLanguageActivity.swedish"
                android:layout_width="match_parent"
                android:layout_weight="0.3"
                android:layout_height="120dp"
                android:src="@drawable/ic_sweden"
                android:background="@null"
                android:scaleType="fitCenter"
                android:focusableInTouchMode="false"
                android:contentDescription="Swedish" />

        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/SelectLanguageActivity.selectlanguagetext"
        android:text="@string/selectlanguage"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:textColor="@color/darkgrey"
        android:textSize="20sp"
        android:gravity="center"
        android:autoText="false" />

</LinearLayout>